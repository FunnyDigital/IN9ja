<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#7c84bb"
    android:layout_height="match_parent"
    tools:context=".HOME">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        android:src="@drawable/pic" />

    <RelativeLayout
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:background="@drawable/roundbtn3"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <Button

        android:id="@+id/playbnt"
        style="@android:style/Holo.ButtonBar"
        android:layout_width="200dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundbnt2"
        android:text="@string/play"
        android:textColor="#ffff"/>

    <Button
        android:id="@+id/options_btn"
        style="@android:style/Holo.ButtonBar"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/playbnt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/roundbnt2"
        android:text="@string/option"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ffff"/>

    <Switch
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/switch1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/options_btn"
        android:background="@drawable/roundbnt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:checked="false"
        android:text="@string/music"
        android:textColor="#ffff"/>


    <Switch

        android:id="@+id/switch2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/switch1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:background="@drawable/roundbnt2"
        android:checked="false"
        android:text="@string/sfx"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ffff"/>

    <Button
        android:id="@+id/Exit_bnt"
        style="@android:style/Holo.ButtonBar"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/switch2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:background="@drawable/backgroud4"
        android:text="@string/quit"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffff"/>


</RelativeLayout>


</RelativeLayout>