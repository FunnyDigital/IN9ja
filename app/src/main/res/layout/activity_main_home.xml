<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F3030"
    android:backgroundTintMode="screen"
    android:orientation="vertical"
    tools:context=".MainHome">

    <TextView
        android:id="@+id/questiondis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="HERE IS OFR THE QUESTIONS "
        android:textColor="#ffff" />

    <Button
        android:id="@+id/choice1"
        android:layout_height="wrap_content"
        android:layout_width="299dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"

        android:background="@drawable/rounded_button"
        android:layout_below="@+id/questiondis"
        android:text="Button"
        />

    <Button
        android:id="@+id/choice2"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Button"
        android:layout_below="@id/choice1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/choice3"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Button"
        android:layout_below="@id/choice2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/choice4"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:text="Button"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toTopOf="@+id/quit1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_below="@id/choice3"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:theme="?attr/actionBarTheme"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COINS"
            android:textColor="#ffff"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>





</RelativeLayout>